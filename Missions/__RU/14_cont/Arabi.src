  If VehOld in Auta then Auta = Auta diff [VehOld];
  If GetSide (VehNew) = side_Ar then Auta = Auta union [VehNew];
  // ⁄toËnÌci.
  If VehOld in Utok_Auta then Utok_Auta = Utok_Auta diff [VehOld];
