// prijezd burlaka do 1. baze s autem
EVERY 0$2 TRIGGER stav=4 and test_is_auto_in_area DO
VAR auto;
VAR ridic;
var mechs, i;
begin
  disable(991);         // dialog bez vozidla uz nemuze probehnout
  InGameOn;
  auto=FilterUnitsInArea(RU1_base,[[f_side,You],[f_type,unit_vehicle]]);
  auto=auto[1];
  ridic=IsDrivenBy(auto);
  ComMoveXY(ridic,117,101);
  CenterOnUnits([auto]);
  Say(kurin,'D10-Kur-1');
  Say(bel,'D10-Bel-1');

  repeat
   ComExitVehicle(ridic);
   wait(0$1);
  until not IsInUnit(ridic);

  SetFuel(auto, 100);
  AddComHold(ridic);
  wait(0$1);
  if BELKOV_MRTVY then
    begin
      Say(bur,'D10-Bur-1');
      Say(bel,'D10-Bel-2');
      Say(bur,'D10-Bur-2');
    end;
  AddComHold(ridic);
  if BELKOV_MRTVY then Say(kurin,'D10-Kur-2a')
                  else Say(kurin,'D10-Kur-2');
  ComExitBuilding(bel);
  while IsInUnit(ridic) do
    begin
      wait(0$1);
      ComExitVehicle(ridic);
    end;
  AddComEnterUnit(bel,auto);
  wait(0$1);
  while IsInUnit(bel)=0 do
    begin
      wait(0$1);
      ComExitBuilding(bel);
      AddComEnterUnit(bel,auto);
    end;
  ComFree(ridic);
  Say(kurin,'D10-Kur-2b');
  ridic_1_auta=ridic;
  ChangeMissionObjectives('M4');
  ComMoveXY(ridic_1_auta, 68, 92);

  wait(0$2);

  objReturn:=True;
  stav=5;
  InGameOff;

  // serpent fix
  // repair vehicle if hp < 1000
  if FilterAllUnits([[f_side, 6], [f_not, [f_lives, 1000]], [f_type, unit_vehicle]]) then
     begin
     mechs := FilterAllUnits([[f_side, 6], [f_class, 3]]);

     ComExitBuilding(mechs);

     for i in FilterAllUnits([[f_side, 6], [f_not, [f_lives, 1000]], [f_type, unit_vehicle]]) do
         AddComRepairVehicle(mechs, i);

     repeat
      wait(0$1);
     until FilterAllUnits([[f_side, 6], [f_not, [f_lives, 1000]], [f_type, unit_vehicle]]) = 0;

     AddComEnterUnit(mechs, RU1_tov);
     end;

  rusi_cesta_na_sever;
  enable(992);
end;

