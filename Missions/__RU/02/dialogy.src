// info query
function info_q(q);
VAR pom;
VAR q1;
begin
  pom=SelectiveQuery('QMoreInfo',q);
  case pom of
   1:begin
       Say(bur,'D2a-Bur-1');
       Say(plat,'D2a-Pla-1');
       q1=q diff 1;
       if q1>=2 then info_q(q1);
     end;
   2:begin
       Say(bur,'D2b-Bur-1');
       Say(plat,'D2b-Pla-1');
       q1=q diff 2;
       if q1>=2 then info_q(q1);
     end;
   3:begin
       Say(bur,'D2c-Bur-1');
       Say(plat,'D2c-Pla-1');
       q1=q diff 3;
       if q1>=2 then info_q(q1);
     end;
  end;
end;

