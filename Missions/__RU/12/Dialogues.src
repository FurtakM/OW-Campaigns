// Query ML1 (in following queries, the option Ask Gleb is only available if Gleb is alive)
function QML1;
var mozn, qr, a, bad;
begin
//The seminal Marxist work "Das Kapital" (The Capital) was written by:
//-1 Marx brothers
//-2 Karl Marx
//-3 St. Paul
//-4 Ask Gleb
   bad:=[1,3];

   mozn:=[1,2,3];
   if IsOk(Gleb) then
     mozn:=mozn ^ [4];

   qr:=SelectiveQuery('QML1', mozn);
   if qr=4 then begin
      a:=bad[Rand(1,2)];
      DQrML_Gleb(a);
      mozn:=mozn diff [a, 4];
      qr:=SelectiveQuery('QML1', mozn);
   end;
   if qr in bad then
      result:=false
   else
      result:=true;
end;

