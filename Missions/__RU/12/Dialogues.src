function otazky;
var qb, qg, q;
begin
   DC_BaseQuestion;
   qb:=0;
   qg:=0;
   q:=0;
   while [(qb<=2),(qb<=1),(qb<=0)][difficulty] and jeste_nebylo do begin
     q:=q+1;
